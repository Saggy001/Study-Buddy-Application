<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/themedarkgray">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cdroundsubtopic"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/subtopicname"
                android:layout_margin="20dp"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/White"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subtopicname"
                android:background="@drawable/subtopicbuttons"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"
                android:drawableStart="@drawable/ic_baseline_video_24"
                android:text="   Watch Video"
                android:layout_alignParentStart="true"
                android:textColor="@color/White"
                android:id="@+id/watchvideo"
                android:padding="10dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subtopicname"
                android:background="@drawable/subtopicbuttons"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                android:drawableStart="@drawable/ic_baseline_notes_24"
                android:text="   View Notes"
                android:layout_alignParentEnd="true"
                android:textColor="@color/White"
                android:id="@+id/notes"
                android:padding="10dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>