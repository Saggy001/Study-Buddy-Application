<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizEnd"
    android:background="@color/thememediumgray">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:id="@+id/cdview">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/CadetBlue">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Congratulation"
                android:layout_margin="30dp"
                android:textSize="20sp"
                android:id="@+id/tag1"
                android:fontFamily="sans-serif"
                android:textColor="@color/Snow"
                style="@style/TextAppearance.AppCompat.Body1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="30dp"
                android:layout_below="@+id/tag1"
                android:id="@+id/text"
                android:textAlignment="center"
                android:textColor="@color/Snow"
                android:textSize="16sp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Home"
        android:textColor="@color/White"
        android:layout_below="@id/cdview"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:padding="10dp"
        android:id="@+id/home"
        android:background="@color/themelightgray"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Re-Attempt"
        android:layout_marginStart="30dp"
        android:textColor="@color/White"
        android:layout_below="@id/cdview"
        android:padding="10dp"
        android:id="@+id/retry"
        android:background="@color/themelightgray"
        />
</RelativeLayout>